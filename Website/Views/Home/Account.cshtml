@model Company
@{
    string title = Model != null ? Model.CompanyName : "Unknown";
    ViewBag.Title = "Thông tin về " + (title);
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Thông tin công ty/tổ chức</h3>
    </div>
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputName1">Mã công ty</label>
                        <input type="text" class="form-control" value="@Model.Id" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Tên công ty</label>
                        <input type="text" class="form-control" value="@Model.CompanyName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Địa chỉ công ty</label>
                        <input type="text" class="form-control" value="@Model.Location" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Email công ty</label>
                        <input type="text" class="form-control" value="@Model.Email" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Mô tả công ty</label>
                        <input type="text" class="form-control" value="@Model.Description" readonly>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Số chứng chỉ công ty</label>
                        <input type="text" class="form-control" value="@Model.SerialNumberCertificate" readonly>
                    </div>
                    <div class="form-group">
                        <img src="~/logos/@Model.LogoCompany" alt="..." class="img-thumbnail" style="max-height: 200px; max-width: 200px;">
                    </div>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger mr-2">
                        Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>